<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="user-scalable = yes">
    <title><%= content_for?(:title) ? yield(:title) : "Marketplace" %></title>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Marketplace" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  
  <body class="<%= controller_name %> <%= action_name %>">
    <div id="wrap">
      <nav class="main-nav">
        <%= render 'layouts/navigation' %>
      </nav>

      <section class="main" id="content"> 
        <aside id="flash" class="faded less-important container">
          <% flash.each do |key, value| %>
            <%= content_tag(:p, value, :class => "flash #{key}") %>
          <% end %>   
        </aside>
      
        <%= yield %>
      </section>
    </div>

    <footer>
      <%= render 'layouts/footer' %>
    </footer>

  </body>
</html>
